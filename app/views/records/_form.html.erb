<%= form_with(model: record, local: true) do |form| %>
  <% if record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type,
                    Record.type_attribute_names,
                    { include_blank: true },
                    { class: 'select2 form-control' }
    %>
  </div>

  <div class="field">
    <%= form.label :host %>
    <%= form.text_field :host %>
  </div>

  <div class="field">
    <%= form.label :ttl %>
    <%= form.number_field :ttl %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :domain_id %>
    <%= select_tag(:domain_id, options_from_collection_for_select(Domain.all, :id, :name), include_blank: "Select Domain...") %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
